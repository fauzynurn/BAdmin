<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="75dp"
            android:src="@drawable/close_logo" />

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunitobold"
            android:text="You haven't opened the order"
            android:textSize="18sp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/open_order_btn"
            android:layout_width="89dp"
            android:layout_height="30dp"
            android:layout_below="@id/main_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:paddingBottom="1dp"
            fancy:fb_defaultColor="#3dfc2f"
            fancy:fb_focusColor="#B7B7B7"
            fancy:fb_radius="10dp"
            fancy:fb_text="Open order"
            fancy:fb_textFont="@font/nunitobold"
            fancy:fb_textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/rect_blue_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/nunitobold"
        android:text="Bahteralicious"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

</RelativeLayout>